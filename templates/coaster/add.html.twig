{% extends 'base.html.twig' %}

{% block title %}Ajouter un coaster{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_coaster_index') }}" class="btn btn-sm btn-ghost">
        ← Retour à la liste
    </a>
</div>

<div class="card bg-base-100 shadow-xl max-w-2xl mx-auto">
    <div class="card-body">
        <h2 class="card-title text-2xl mb-4">Ajouter un coaster</h2>
        
        {{ form_start(coasterForm) }}
            {{ form_widget(coasterForm) }}
            <div class="card-actions justify-end mt-6">
                <a href="{{ path('app_coaster_index') }}" class="btn btn-ghost">Annuler</a>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
        {{ form_end(coasterForm) }}
    </div>
</div>
{% endblock %}
