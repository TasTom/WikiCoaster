{% extends 'base.html.twig' %}

{% block title %}Liste des Coasters{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold mb-4">Liste des Coasters</h1>
    
        <a href="{{ path('app_coaster_add') }}" class="btn btn-primary mt-4">
            Ajouter un coaster
        </a>
        
        
        <div class="overflow-x-auto">
            <table class="table table-zebra w-full">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Vitesse max</th>
                        <th>Longueur</th>
                        <th>Hauteur max</th>
                        <th>En fonction</th>
                    </tr>
                </thead>
                <tbody>
                    {% for coaster in coasters %}
                        <tr>
                            <td>{{ coaster.name }}</td>
                            <td>{{ coaster.maxSpeed }}</td>
                            <td>{{ coaster.length }}</td>
                            <td>{{ coaster.maxHeight }}</td>
                            <td>
                                {% if coaster.operating %}
                                    <span class="badge badge-success">Oui</span>
                                {% else %}
                                    <span class="badge badge-error">Non</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
