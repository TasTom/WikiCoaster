{% extends 'base.html.twig' %}

{% block title %}Supprimer un Coaster{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold mb-4">Supprimer un Coaster</h1>
         <p>Êtes-vous sûr de vouloir supprimer ce coaster ?</p>
        <form method="post" action="{{ path('app_coaster_delete', {'id': coaster.id}) }}">
            <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </form>

        <a href="{{ path('app_coaster_index') }}" class="btn btn-primary mt-4">
            Retour à la liste
        </a>
    </div>
{% endblock %}
