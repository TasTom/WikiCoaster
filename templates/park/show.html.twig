{% extends 'base.html.twig' %}

{% block title %}{{ park.name }}{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_park_index') }}" class="btn btn-sm btn-ghost">
        ‚Üê Retour √† la liste
    </a>
</div>

<div class="card bg-base-100 shadow-xl">
    <div class="card-body">
        <h2 class="card-title text-3xl">{{ park.name }}</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
            <div class="stat bg-base-200 rounded-lg">
                <div class="stat-title">Pays</div>
                <div class="stat-value text-primary text-2xl">{{ park.country }}</div>
            </div>
            
            <div class="stat bg-base-200 rounded-lg">
                <div class="stat-title">Ann√©e d'ouverture</div>
                <div class="stat-value text-secondary text-2xl">{{ park.openingYear ?? 'Non renseign√©e' }}</div>
            </div>
        </div>

        {% if park.coasters|length > 0 %}
            <div class="divider"></div>
            <h3 class="font-bold text-lg mb-2">üé¢ Coasters dans ce parc</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {% for coaster in park.coasters %}
                    <div class="card bg-base-200">
                        <div class="card-body p-4">
                            <h4 class="card-title text-base">{{ coaster.name }}</h4>
                            <a href="{{ path('app_coaster_show', {id: coaster.id}) }}" class="btn btn-sm btn-primary mt-2">
                                Voir
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <div class="card-actions justify-end mt-6">
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_park_edit', {id: park.id}) }}" class="btn btn-warning">
                    Modifier
                </a>
                <form method="post" action="{{ path('app_park_delete', {id: park.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce parc ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ park.id) }}">
                    <button type="submit" class="btn btn-error">Supprimer</button>
                </form>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
