{% extends 'base.html.twig' %}

{% block title %}Modifier {{ user.username }}{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_user_show', {id: user.id}) }}" class="btn btn-sm btn-ghost">
        ← Retour à l'utilisateur
    </a>
</div>

<div class="card bg-base-100 shadow-xl max-w-2xl mx-auto">
    <div class="card-body">
        <h2 class="card-title text-2xl mb-4">Modifier l'utilisateur</h2>
        
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="card-actions justify-end mt-6">
                <a href="{{ path('app_user_index') }}" class="btn btn-ghost">Annuler</a>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
