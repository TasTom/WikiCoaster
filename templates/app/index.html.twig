{% extends 'base.html.twig' %}

{% block title %}Accueil - WikiCoaster{% endblock %}

{% block body %}
<div class="hero min-h-[70vh] bg-base-200 rounded-lg">
    <div class="hero-content text-center">
        <div class="max-w-md">
            <h1 class="text-5xl font-bold mb-4">üé¢ WikiCoaster</h1>
            <p class="text-xl mb-8">
                D√©couvrez et partagez des informations sur les montagnes russes du monde entier !
            </p>
            
            <div class="flex gap-4 justify-center">
                <a href="{{ path('app_coaster_index') }}" class="btn btn-primary btn-lg">
                    Voir les coasters
                </a>
                {% if not app.user %}
                    <a href="{{ path('app_register') }}" class="btn btn-secondary btn-lg">
                        S'inscrire
                    </a>
                {% endif %}
            </div>

            {% if app.user %}
                <div class="mt-8">
                    <p class="text-lg">
                        Bienvenue, <strong>{{ app.user.username }}</strong> !
                    </p>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<div class="stats stats-vertical lg:stats-horizontal shadow w-full mt-8">
    <div class="stat">
        <div class="stat-figure text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-8 w-8 stroke-current">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
        </div>
        <div class="stat-title">Coasters</div>
        <div class="stat-value text-primary">{{ coaster_count ?? '?' }}</div>
        <div class="stat-desc">Dans le monde entier</div>
    </div>
    
    <div class="stat">
        <div class="stat-figure text-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-8 w-8 stroke-current">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
        </div>
        <div class="stat-title">Parcs</div>
        <div class="stat-value text-secondary">{{ park_count ?? '?' }}</div>
        <div class="stat-desc">R√©f√©renc√©s</div>
    </div>
    
    <div class="stat">
        <div class="stat-figure text-accent">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-8 w-8 stroke-current">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
        </div>
        <div class="stat-title">Cat√©gories</div>
        <div class="stat-value text-accent">{{ category_count ?? '?' }}</div>
        <div class="stat-desc">Types de coasters</div>
    </div>
</div>
{% endblock %}
